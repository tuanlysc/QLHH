@model QLHS.Models.category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Thêm danh mục</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Thêm danh mục</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<section class="content">

    <!-- Default box -->
    <div class="col-8">
        <div class="card p-5">
            <form role="form" method="post" action="/Admin/Category/Edit" enctype="multipart/form-data">
                <div class="box-body">
                    <input type="hidden" class="form-control" name="id" value="@Model.id">
                    <input type="hidden" class="form-control" name="img" value="@Model.img">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tên Danh mục</label>
                        <input type="text" class="form-control" name="category_name" value="@Model.category_name">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">Trạng thái</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" value="true" name="category_status" @(Model.category_status == true ? "checked" : "")>
                            <label class="form-check-label" for="flexCheckDefault">
                                Hiện
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" value="false" name="category_status" @(Model.category_status == false ? "checked" : "")>
                            <label class="form-check-label" for="flexCheckChecked">
                                Ẩn
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile">Ảnh</label>
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="input" name="fImage">
                                <label class="custom-file-label" for="exampleInputFile">@Model.img</label>
                            </div>
                            <div class="input-group-append">
                                <span class="input-group-text">Tải ảnh</span>
                            </div>
                        </div>
                    </div>
                    @if (Model != null && !string.IsNullOrEmpty(Model.img) && Model.img.Length > 1)
                    {
                        <img id="imgCate" class="mb-3 " src="~/Assets/Upload/@Model.img" width="100px">
                    }

                </div>

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Thêm</button>
                </div>
            </form>

        </div>
    </div>
</section>