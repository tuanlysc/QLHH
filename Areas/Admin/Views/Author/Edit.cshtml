@model QLHS.Models.author
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Thêm Tác giả</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Thêm Tác giả</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<section class="content">

    <!-- Default box -->
    <div class="col-8">
        <div class="card p-5">
            <form role="form" method="post" action="/Admin/Author/Edit" enctype="multipart/form-data">
                <div class="box-body">
                    <input type="hidden" class="form-control" name="id" value="@Model.id">
                    <input type="hidden" class="form-control" name="img" value="@Model.img">
                    <div class="form-group">
                        @Html.LabelFor(model => model.name_author, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.name_author, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.name_author, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputFile">Ảnh</label>
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="input" name="fImage">
                                <label class="custom-file-label" for="exampleInputFile">@Model.img</label>
                            </div>
                            <div class="input-group-append">
                                <span class="input-group-text">Tải ảnh</span>
                            </div>
                        </div>
                    </div>
                    @if (Model != null && !string.IsNullOrEmpty(Model.img) && Model.img.Length > 1)
                    {
                        <img id="imgCate" class="mb-3 " src="~/Assets/Upload/@Model.img" width="100">
                    }

                </div>

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Sửa</button>
                </div>
            </form>

        </div>
    </div>
</section>