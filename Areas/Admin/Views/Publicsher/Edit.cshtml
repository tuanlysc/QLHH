@model QLHS.Models.publicsher
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Sửa Nhà xuất bản</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Sửa Nhà xuất bản</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<section class="content">

    <!-- Default box -->
    <div class="col-8">
        <div class="card p-5">
            <form role="form" method="post" action="/Admin/Author/Edit" enctype="multipart/form-data">
                <div class="box-body">
                    <input type="hidden" class="form-control" name="id" value="@Model.id">
                    <div class="form-group">
                        @Html.LabelFor(model => model.name_publicsher, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.name_publicsher, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.name_publicsher, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Sửa</button>
                </div>
            </form>

        </div>
    </div>
</section>