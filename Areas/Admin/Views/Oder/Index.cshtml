@model IEnumerable<QLHS.Models.order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Danh mục</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Sản phẩm</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">

    <!-- Default box -->
    <div class="col-12">
        <div class="card">
            <div class=" p-2 align-items-center d-flex justify-content-between">
                <div>
                    <a href="@Url.Action("Create", "Oder")" class="btn btn-success">+Thêm mới </a>
                </div>

                <div class="card-tools">
                    <form>
                        <div class="input-group input-group-sm" style="width: 150px;">

                            <input type="text" name="keyword" class="form-control float-right"
                                   placeholder="Search" value="">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card-body table-responsive p-0" style="height: 400px;">
                <table class="table table-head-fixed text-nowrap">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.address_ship)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.date_order)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.full_name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.phone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.sum_money)
                            </th>
                            <th>Tùy chọn</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.address_ship)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.date_order)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.full_name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.phone)
                                </td>
                                <td>
                                    <select class="badge st" th:id="{@item.id}"
                                            th:classappend="{@item.status == 0 ? 'bg-danger' : (@item.status == 1) ? 'bg-warning' : (@item.status == 2) ? 'bg-primary' : 'bg-success'}">
                                        <option value="0" th:selected="{@item.status == 0}">Chờ xác nhận</option>
                                        <option value="1" th:selected="{@item.status == 1}">Đã duyệt</option>
                                        <option value="2" th:selected="{@item.status == 2}">Đang giao</option>
                                        <option value="3" th:selected="{@item.status == 3}">Giao thành công</option>
                                    </select>

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sum_money)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "Oder",new { id = item.id })"
                                       class="btn btn-primary">Chi tiết</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @*<div class="card-footer clearfix">
                    <ul class="pagination pagination-sm m-0 float-right">
                        <li th:classappend="${currentPage==1 ? 'disabled' :''}" class="page-item"><a class="page-link" th:href="@{'?page='+${currentPage-1}}">«</a></li>
                        <li th:each="i:${#numbers.sequence(1,totalPage)}" th:classappend="${currentPage==i ? 'active' :''}" class="page-item"><a class="page-link" th:text="${i}" th:href="@{${keyword!=null && keyword!='' ? '?keyword=' +keyword+'&' : '?'}+'page='+${i}}"></a></li>
                        <li th:classappend="${currentPage==totalPage ? 'disabled' :''}" class="page-item"><a class="page-link" th:href="@{'?page='+${currentPage+1}}">»</a></li>
                    </ul>
                </div>*@
        </div>

    </div>

</section>