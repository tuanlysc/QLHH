
@model QLHS.Models.cart
<div class="your-order-table table-responsive">
    <table>
        <thead>
            <tr>
                <th class="product-name">Sản phẩm</th>
                <th class="product-total">Số lượng</th>
                <th class="product-total">Tổng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.cart_item)
            {
                <tr class="cart_item">

                    <td class="product-name">
                        <span>@item.book.book_name</span>
                    </td>
                    <td>
                        <strong class="product-quantity"> x <span>@item.quantity</span></strong>
                    </td>
                    <td class="product-total">
                        <span class="amount">@Html.FormatValue(item.book.price_sale, "{0:#,###}")</span>
                    </td>
                  

                </tr>
            }
            </tbody>
        <tfoot>
            <tr class="cart-subtotal">
                <th>Cart Subtotal</th>
                <td></td>
                <td><span class="amount">@Html.FormatValue(Model.total, "{0:#,###}")</span></td>
            </tr>
            <tr class="shipping">
                <th>Shipping</th>
                <td></td>
                <td>
                    <ul>

                        <li>
                            <input type="radio" checked>
                            <label>Free Shipping:</label>
                        </li>
                        <li></li>
                    </ul>
                </td>
            </tr>
            <tr class="order-total">
                <th>Order Total</th>
                <td></td>
                <td>
                    <strong><span class="amount">@Html.FormatValue(Model.total, "{0:#,###}")</span></strong>
                </td>
            </tr>
        </tfoot>
    </table>
</div>

