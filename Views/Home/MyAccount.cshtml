<!-- my account wrapper start -->
<div class="my-account-wrapper mb-70">
    <div class="container">
        <div class="section-bg-color">
            <div class="row">
                <div class="col-lg-12">
                    <!-- My Account Page Start -->
                    <div class="myaccount-page-wrapper">
                        <!-- My Account Tab Menu Start -->
                        <div class="row">
                            <div class="col-lg-3 col-md-4">
                                <div class="myaccount-tab-menu nav" role="tablist">
                                    <a href="#account-info" class="active" data-bs-toggle="tab">
                                        <i class="fa fa-user"></i>Thông tin tài khoản
                                    </a>
                                    <a href="#account-pass" data-bs-toggle="tab">
                                        <i class="fa fa-lock"></i>Đổi mật
                                        khẩu
                                    </a>
                                    <a href="#orders" data-bs-toggle="tab">
                                        <i class="fa fa-cart-arrow-down"></i>
                                        Đơn hàng
                                    </a>
                                    <a href=""><i class="fa fa-sign-out"></i>Đăng xuất</a>
                                </div>
                            </div>
                            <!-- My Account Tab Menu End -->
                            <!-- My Account Tab Content Start -->
                            <div class="col-lg-9 col-md-8">
                                <div class="tab-content" id="myaccountContent">
                                    <!-- Single Tab Content Start -->
                                    <!-- Single Tab Content End -->
                                    <!-- Single Tab Content Start -->
                                    <div class="tab-pane fade" id="orders" role="tabpanel">
                                        <div class="myaccount-content">
                                            <h5>Đơn hàng</h5>
                                            @{
                                                Html.RenderAction("Order", "Home");
                                            }
                                        </div>
                                    </div>
                                    <!-- Single Tab Content End -->
                                    <div class="tab-pane fade show active" id="account-info" role="tabpanel">
                                        <div class="myaccount-content">
                                            <h5>Thông tin tài khoản</h5>
                                            <div class="account-details-form">
                                                <form action="/Home/MyAccount" method="post" enctype="multipart/form-data">
                                                    <input type="hidden" class="form-control" name="id" value="@Model.id">
                                                    <input type="hidden" class="form-control" name="user_name" value="@Model.user_name">
                                                    <input type="hidden" class="form-control" name="pass_word" value="@Model.pass_word">
                                                    <input type="hidden" class="form-control" name="img" value="@Model.img">
                                                    <div class="row">
                                                        <div class="col-lg-6">
                                                            <div class="single-input-item">
                                                                <label for="display-name" class="required">Họ tên</label>
                                                                <input type="text" id="full_name" name="full_name" value="@Model.full_name"
                                                                       placeholder="Full Name" />
                                                            </div>
                                                            <div class="single-input-item">
                                                                <label for="email" class="required">Email</label>
                                                                <input type="email" id="email" name="email" value="@Model.email"
                                                                       placeholder="Email" />
                                                            </div>
                                                            <div class="single-input-item">
                                                                <label for="email" class="required">Địa chỉ</label>
                                                                <input type="text" id="address" name="address" value="@Model.address"
                                                                       placeholder="Address" />
                                                            </div>
                                                            <div class="single-input-item">
                                                                <label for="email" class="required">Số điện thoại</label>
                                                                <input type="text" id="telephone" name="telephone" value="@Model.telephone"
                                                                       placeholder="Phone" />
                                                            </div>
                                                            <div class="form-group mt-3">
                                                                <label for="exampleInputPassword1">Giới tính</label>
                                                                <div class="d-flex">
                                                                    <div class="form-check">
                                                                        <input class="form-check-input" type="radio" value="1" id="genderNam" name="gender" @(Model.gender == 1 ? "checked" : "")>
                                                                        <label class="form-check-label" for="genderNam">
                                                                            Nam
                                                                        </label>
                                                                    </div>
                                                                    <div class="form-check" style="margin-left: 10px;">
                                                                        <input class="form-check-input" type="radio" value="0" id="genderNu" name="gender" @(Model.gender == 0 ? "checked" : "")>
                                                                        <label class="form-check-label" for="genderNu">
                                                                            Nữ
                                                                        </label>
                                                                    </div>
                                                                </div>

                                                            </div>
                                                            <div class="single-input-item">
                                                                <label for="email" class="required">Ngày sinh</label>
                                                                <input type="date" value="@Html.FormatValue(@Model.birthday,"{0:yyyy-MM-dd}")" />
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-6 d-flex align-items-center justify-content-center">
                                                            <div class="imgCustomer">
                                                                <div class="imgCus mb-3">
                                                                    <img id="imgCus" src="~/Assets/Upload/@Model.img" alt="" class="w-100">
                                                                </div>
                                                                <input style="display: none;" type="file"
                                                                       id="imageInput" name="fileImage">
                                                                <button type="button" class="btn btn-success"
                                                                        id="chooseButton">
                                                                    Chọn ảnh
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>


                                                    <div class="single-input-item">
                                                        <button type="submit" class="btn btn-sqr">Lưu thay đổi</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div> <!-- Single Tab Content End -->
                                    <div class="tab-pane fade " id="account-pass" role="tabpanel">
                                        <div class="myaccount-content">
                                            <div class="account-details-form">
                                                <h5>Password change</h5>
                                                <div class="account-details-form">
                                                  @*  <form action="" method="post">
                                                        <div class="single-input-item">
                                                            <label for="current-pwd" class="required">Mật khẩu cũ</label>
                                                            <input type="password" name="oldPass" id="current-pwd"
                                                                   placeholder="Mật khẩu cũ" />
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-lg-6">
                                                                <div class="single-input-item">
                                                                    <label for="new-pwd" class="required">Mật khẩu mới</label>
                                                                    <input type="password" id="new-pwd" name="newPass"
                                                                           placeholder="New Password" />
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-6">
                                                                <div class="single-input-item">
                                                                    <label for="confirm-pwd"
                                                                           class="required">Nhập lại mật khẩu</label>
                                                                    <input type="password" id="confirm-pwd"
                                                                           placeholder="Confirm Password" />
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="single-input-item">
                                                            <button type="submit" class="btn btn-sqr">Lưu thay đổi</button>
                                                        </div>
                                                    </form>*@
                                                </div>

                                            </div>
                                        </div>
                                    </div> <!-- Single Tab Content End -->
                                </div>
                            </div> <!-- My Account Tab Content End -->
                        </div>
                    </div> <!-- My Account Page End -->
                </div>
            </div>
        </div>
    </div>
</div>