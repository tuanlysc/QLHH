
@model IEnumerable<QLHS.Models.author>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Tác giả</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Tác giả</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">

    <!-- Default box -->
    <div class="col-12">
        <div class="card">
            <div class=" p-2 align-items-center d-flex justify-content-between">
                <div>
                    <a href="@Url.Action("Create", "Author")" class="btn btn-success">+Thêm mới </a>
                </div>

                <div class="card-tools">
                    <form>
                        <div class="input-group input-group-sm" style="width: 150px;">

                            <input type="text" name="keyword" class="form-control float-right"
                                   placeholder="Search" value="">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card-body table-responsive p-0" style="height: 400px;">
                <table class="table table-head-fixed text-nowrap">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.img)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.name_author)
                            </th>

                            <th>Tùy chọn</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.id)
                                </td>
                                <td>
                                    <img src="~/Assets/Upload/@item.img" width="50" height="50" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name_author)
                                </td>

                                <td>
                                    <a href="@Url.Action("Edit", "Author",new { id = item.id })"
                                       class="btn btn-success">Sửa</a>
                                    <a href="@Url.Action("Delete", "Author", new { id = item.id })"
                                       class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa không?')">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @*<div class="card-footer clearfix">
                    <ul class="pagination pagination-sm m-0 float-right">
                        <li th:classappend="${currentPage==1 ? 'disabled' :''}" class="page-item"><a class="page-link" th:href="@{'?page='+${currentPage-1}}">«</a></li>
                        <li th:each="i:${#numbers.sequence(1,totalPage)}" th:classappend="${currentPage==i ? 'active' :''}" class="page-item"><a class="page-link" th:text="${i}" th:href="@{${keyword!=null && keyword!='' ? '?keyword=' +keyword+'&' : '?'}+'page='+${i}}"></a></li>
                        <li th:classappend="${currentPage==totalPage ? 'disabled' :''}" class="page-item"><a class="page-link" th:href="@{'?page='+${currentPage+1}}">»</a></li>
                    </ul>
                </div>*@
        </div>

    </div>

</section>